<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.amitroshan.hasura.Home">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="380dp"
        android:layout_height="69dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/hello"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="3dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alarm"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.226"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/set_bt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="serif"
        android:text="SET UP ALARM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/my_toolbar"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.556"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/question_bt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="serif"
        android:text="SAMPLE"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/set_bt"
        android:layout_alignLeft="@+id/set_bt"
        android:layout_alignStart="@+id/set_bt"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/set_bt"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/help_bt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/help_bt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="serif"
        android:text="HELP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/question_bt"
        android:layout_alignLeft="@+id/question_bt"
        android:layout_alignStart="@+id/question_bt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/set_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.457" />

    <Button
        android:id="@+id/logout_bt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="serif"
        android:text="LOGOUT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/help_bt"
        android:layout_alignLeft="@+id/help_bt"
        android:layout_alignStart="@+id/help_bt"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/help_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.222"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
